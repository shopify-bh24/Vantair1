<style>
  .custom-header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 9999;
    background: linear-gradient(to bottom, #015068 50%, #03526a 100%);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    color: white;
    height: 80px;
  }

  .header-container {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0.5rem 4rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .header-logo img {
    max-height: 60px;
  }

  .logo-text {
    font-size: 1.5rem;
    font-weight: 700;
    color: #027efb;
  }

  /* Desktop menu */
  .header-menu {
    display: flex;
    gap: 1rem;
    align-items: center;
    justify-content: center;
  }

  .header-menu a {
    font-size: 1.5rem;
    color: white;
    text-decoration: none;
    transition: background 0.3s;
    border-radius: 50px;
    padding: 1rem 1.8rem;
  }

  .header-menu a:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  .header-menu a.active {
    background: rgba(255, 255, 255, 0.2);
  }

  body {
    padding-top: 80px;
  }

  /* Hamburger (hidden by default) */
  .menu-toggle {
    display: none;
    flex-direction: column;
    justify-content: space-between;
    width: 28px;
    height: 20px;
    cursor: pointer;
  }

  .menu-toggle span {
    display: block;
    height: 3px;
    background: white;
    border-radius: 2px;
    transition: 0.3s;
  }

  /* Responsive */
  @media (max-width: 450px) {
    .header-container {
      flex-direction: row;
      align-items: center;
    }

    .menu-toggle {
      display: flex;
    }

    .header-menu {
      position: absolute;
      top: 80px;
      left: 0;
      width: 100%;
      background: #015068;
      flex-direction: column;
      display: none;
      padding: 1rem 0;
    }

    .header-menu.open {
      display: flex;
    }

    .header-menu a {
      margin: 0.5rem 0;
      padding: 1rem;
      text-align: center;
    }

  .header-menu a.active {
    width: 100%;
  }
  }
</style>

<header class="custom-header">
  <div class="header-container">
    <!-- Logo -->
    <div class="header-logo">
      {% if section.settings.logo != blank %}
        <img src="{{ section.settings.logo | image_url: width: 200 }}" alt="Logo">
      {% else %}
        <span class="logo-text">{{ section.settings.logo_text }}</span>
      {% endif %}
    </div>

    <!-- Hamburger toggle (mobile only) -->
    <div class="menu-toggle" id="menuToggle">
      <span></span>
      <span></span>
      <span></span>
    </div>

    <!-- Navigation Menu -->
    <nav class="header-menu" id="headerMenu">
      {% for link in linklists.main-menu.links %}
        <a href="{{ link.url }}" class="{% if link.active %}active{% endif %}">
          {{ link.title }}
        </a>
      {% endfor %}
    </nav>
  </div>
</header>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const menuToggle = document.getElementById("menuToggle");
    const headerMenu = document.getElementById("headerMenu");

    menuToggle.addEventListener("click", function () {
      headerMenu.classList.toggle("open");
    });
  });
</script>

{% schema %}
  {
    "name": "Custom Header",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      }, {
        "type": "text",
        "id": "logo_text",
        "label": "Logo Text",
        "default": "My Store"
      }
    ],
    "presets": [
      {
        "name": "Custom Header",
        "category": "Header"
      }
    ]
  }
{% endschema %}