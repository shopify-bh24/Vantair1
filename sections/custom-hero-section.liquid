<style>
  .custom-hero-section {
    position: relative;
    width: 100%;
    color: #fff;
    font-family: Arial
    , sans-serif;
    /* overflow: hidden; */
    min-height: 700px;
    /* border-radius: 12px; */
    /* max-width: 1440px; */
    /* margin: auto; */
    /* ensures hero has height */
    max-width: 100% !important;
    display: flex;
    align-items: center;
    justify-content: center;
  }


  .hero-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    z-index: 1;
    filter: brightness(0.8);
  }

  /* Gradient overlay */
  .hero-image::after {
    content: '';
    position: absolute;
    top: 0;
    /* cover entire parent */
    left: 0;
    width: 100%;
    height: 100%;
    display: block;
    z-index: 2;
    /* above hero-image background */
    pointer-events: none;

    /* combine gradients properly */
    background: linear-gradient(to bottom, #015068 0%, transparent 50%), linear-gradient(to bottom, transparent 30%, rgba(0, 0, 0, 0.8) 100%);
  }


  .hero-content {
    /* position: absolute; */
    z-index: 2;
    max-width: 1200px;
    margin: 0 auto;
    /* padding: 0 0 6rem 5rem; */
    display: flex;
    flex-direction: column;
    gap: 2rem;
    bottom: 0;
    align-items: center;
  }

  .hero-subtitle {
    font-size: 1.2rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.85);
  }

  .hero-title {
    font-size: 4rem;
    font-weight: 1000;
    color: white;
    font-family: 'Assistant';
  }

  .hero-title p {
    margin: 0;
  }

  .hero_snippet {
    /* position: absolute; */
    /* bottom: 40%; */
    /* display: flex; */
    /* justify-content: center; */
    width: 100%;
    z-index: 3;
  }

  .hero_snippet_search_button {
    font-size: 2rem;
    /* height: 50px; */
    display: flex;
    align-items: center;
    padding: 2.3rem 3rem;
    border: 1px solid;
  }

</style>

<section class="custom-hero-section info-section">
  <div class="hero-content">
    {% if section.settings.subtitle != blank %}
      <p class="section_subtitle" style="margin: 0;">{{ section.settings.subtitle }}</p>
    {% endif %}

    {% if section.settings.title != blank %}
      <div class="hero-title">{{ section.settings.title }}</div>
    {% endif %}

    <div class="hero_snippet">
      {% render 'filter-search' %}
    </div>

    <div class="hero_snippet_search_button custom-btn btn-5" id="customSearchBtn">Search</div>
  </div>

  <div class="hero-image" style="background-image: url('{{ section.settings.image | image_url: width: 2000 }}');">.</div>

</section>

<script>
  document.getElementById("customSearchBtn").addEventListener("click", function () {
    document.querySelector(".customTargetCollection").scrollIntoView({
      behavior: "smooth", // smooth scrolling
      block: "start"      // align at the top
    });
  });
</script>


{% schema %}
  {
    "name": "Custom Hero Section",
    "settings": [
      {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "Your subtitle here"
      }, {
        "type": "richtext",
        "id": "title",
        "label": "Title",
        "default": "<p>Your Hero Title</p>"
      }, {
        "type": "image_picker",
        "id": "image",
        "label": "Background Image"
      }
    ],
    "blocks": [
      {
        "type": "typology_option",
        "name": "Typology Option",
        "settings": [{
            "type": "text",
            "id": "label",
            "label": "Option Label",
            "default": "Houses"
          }
        ]
      }, {
        "type": "region_option",
        "name": "Region Option",
        "settings": [{
            "type": "text",
            "id": "label",
            "label": "Option Label",
            "default": "Lisboa"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Custom Hero Section",
        "category": "Custom Sections"
      }
    ]
  }
{% endschema %}