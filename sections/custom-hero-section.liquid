<style>
  .custom-hero-section {
    position: relative;
    width: 100%;
    color: #fff;
    font-family: Arial
    , sans-serif;
    /* overflow: hidden; */
    min-height: 700px;
    /* border-radius: 12px; */
    /* max-width: 1440px; */
    /* margin: auto; */
    /* ensures hero has height */
    max-width: 100% !important;
  }


  .hero-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    z-index: 1;
  }

  /* Gradient overlay */
  .hero-image::after {
    content: '';
    position: absolute;
    top: 0;
    /* cover entire parent */
    left: 0;
    width: 100%;
    height: 100%;
    display: block;
    z-index: 2;
    /* above hero-image background */
    pointer-events: none;

    /* combine gradients properly */
    background: linear-gradient(to bottom, #015068 0%, transparent 50%), linear-gradient(to bottom, transparent 30%, rgba(0, 0, 0, 0.8) 100%);
  }


  .hero-content {
    position: absolute;
    z-index: 2;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 0 6rem 5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    bottom: 0;
  }

  .hero-subtitle {
    font-size: 1.2rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.85);
  }

  .hero-title {
    font-size: 5rem;
    font-weight: 1000;
    color: white;
    font-family: 'Assistant';
  }

  .hero-title p {
    margin: 0;
  }

  .hero_snippet{
    position: absolute;
    bottom: -40px;
    /* display: flex; */
    /* justify-content: center; */
    width: calc(100% - 7rem);
    z-index: 3;
  }

</style>

<section class="custom-hero-section info-section">
  <div class="hero-content">
    {% if section.settings.subtitle != blank %}
      <p class="section_subtitle" style="margin: 0;">{{ section.settings.subtitle }}</p>
    {% endif %}

    {% if section.settings.title != blank %}
      <div class="hero-title">{{ section.settings.title }}</div>
    {% endif %}

    </div>
    
    <div class="hero-image" style="background-image: url('{{ section.settings.image | image_url: width: 2000 }}');">.</div>

    <div class="hero_snippet">
      {% render 'filter-search' %}
    </div>
</section>


{% schema %}
  {
    "name": "Custom Hero Section",
    "settings": [
      {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "Your subtitle here"
      }, {
        "type": "richtext",
        "id": "title",
        "label": "Title",
        "default": "<p>Your Hero Title</p>"
      }, {
        "type": "image_picker",
        "id": "image",
        "label": "Background Image"
      }
    ],
    "presets": [
      {
        "name": "Custom Hero Section",
        "category": "Custom Sections"
      }
    ]
  }
{% endschema %}