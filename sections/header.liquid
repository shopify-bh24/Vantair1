<style>
  .custom-header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 9999;
    background: linear-gradient(to bottom, #015068 50%, #03526a 100%);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    color: white;
    height: 80px;
  }

  /* Header container */
  .header-container {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0.5rem 4rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  /* Logo */
  .header-logo img {
    max-height: 60px;
  }

  .logo-text {
    font-size: 1.5rem;
    font-weight: 700;
    color: #027efb;
  }

  /* Menu wrapper */
  .header-menu {
    display: flex;
    gap: 1rem;
    align-items: center;
    justify-content: center;
  }

  /* Menu links */
  .header-menu a {
    font-size: 1.5rem;
    color: white;
    text-decoration: none;
    transition: background 0.3s;
    border-radius: 50px;
    padding: 1rem 1.8rem;
  }

  /* Hover effect */
  .header-menu a:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  /* Active link (current page) */
  .header-menu a.active {
    background: rgba(255, 255, 255, 0.2);
  }

  /* Add body padding so content is not hidden under header */
  body {
    padding-top: 80px;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .header-container {
      flex-direction: column;
      align-items: flex-start;
    }

    .header-menu {
      margin-top: 1rem;
      flex-direction: column;
      width: 100%;
    }

    .header-menu a {
      margin: 0.5rem 0;
    }
  }
</style>

<header class="custom-header">
  <div class="header-container">
    <!-- Logo -->
    <div class="header-logo">
      {% if section.settings.logo != blank %}
        <img src="{{ section.settings.logo | image_url: width: 200 }}" alt="Logo">
      {% else %}
        <span class="logo-text">{{ section.settings.logo_text }}</span>
      {% endif %}
    </div>

    <!-- Navigation Menu -->
    <nav class="header-menu">
      {% for link in linklists.main-menu.links %}
        <a href="{{ link.url }}" class="{% if link.active %}active{% endif %}">
          {{ link.title }}
        </a>
      {% endfor %}
    </nav>
  </div>
</header>

{% schema %}
{
  "name": "Custom Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "My Store"
    }
  ],
  "presets": [
    {
      "name": "Custom Header",
      "category": "Header"
    }
  ]
}
{% endschema %}
