<style>
  .whyus-section {
    background: #f9f9f9;
    font-family: Arial, sans-serif;
    width: 100%;
  }

  .whyus-container {
    width: 100%;
    max-width: 1440px;
    margin: 0 auto;
  }

  .whyus-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 3rem;
  }

  .whyus-explanation {
    font-size: 1.2rem;
    color: #555;
    max-width: 500px;
    margin: 0;
    text-align: right;
  }

  .whyus-blocks {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 2rem;
  }

  .whyus-block {
    background: #fff;
    border-radius: 12px;
    padding: 3rem 2.5rem;
    text-align: start;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    transition: transform 0.3s ease;
    border: 1px solid #01506838;
  }

  .whyus-icon {
    width: 60px;
    height: 60px;
    object-fit: contain;
    margin-bottom: 2rem;
    background: #015068;
    border-radius: 50px;
    padding: 1rem;
  }

  .whyus-block-title {
    font-size: 2.5rem;
    font-weight: 600;
    color: #111;
    margin: 0 0 0.5rem;
  }

  .whyus-block-description {
    font-size: 1.4rem;
    color: #555;
    margin: 0;
    line-height: 1.5;
  }

  @media screen and (max-width: 450px) {

    
  }
</style>

<section class=" info-section whyus-section">
  <div class="whyus-container">

    <!-- Row 1: Subtitle -->
    {% if section.settings.subtitle != blank %}
      <h3 class="section_subtitle">{{ section.settings.subtitle }}</h3>
    {% endif %}

    <!-- Row 2: Title (left) + Explanation (right) -->
    <div class="whyus-header">
      {% if section.settings.title != blank %}
        <h2 class="section-title" style="margin-bottom: 0;">{{ section.settings.title }}</h2>
      {% endif %}
      {% if section.settings.explanation != blank %}
        <p class="whyus-explanation">{{ section.settings.explanation }}</p>
      {% endif %}
    </div>

    <!-- Row 3: Blocks -->
    <div class="whyus-blocks">
      {% for block in section.blocks %}
        <div class="whyus-block" {{ block.shopify_attributes }}>
          {% if block.settings.icon != blank %}
            <img
              class="whyus-icon"
              src="{{ block.settings.icon | image_url: width: 80 }}"
              alt="{{ block.settings.title | escape }}">
          {% endif %}
          {% if block.settings.title != blank %}
            <h3 class="whyus-block-title">{{ block.settings.title }}</h3>
          {% endif %}
          {% if block.settings.description != blank %}
            <p class="whyus-block-description">{{ block.settings.description }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>

  </div>
</section>


{% schema %}
  {
    "name": "Why Us Section",
    "settings": [
      {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "Why Choose Us"
      }, {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Our Core Strengths"
      }, {
        "type": "textarea",
        "id": "explanation",
        "label": "Explanation",
        "default": "This short explanation highlights the section content or provides supporting context."
      }
    ],
    "blocks": [
      {
        "type": "info_block",
        "name": "Info Block",
        "settings": [
          {
            "type": "image_picker",
            "id": "icon",
            "label": "Icon"
          }, {
            "type": "text",
            "id": "title",
            "label": "Block Title",
            "default": "Block Heading"
          }, {
            "type": "textarea",
            "id": "description",
            "label": "Block Description",
            "default": "This is the description for this block."
          }
        ]
      }
    ],
    "max_blocks": 6,
    "presets": [
      {
        "name": "Why Us Section",
        "category": "Custom Sections",
        "blocks": [
          {
            "type": "info_block"
          }, {
            "type": "info_block"
          }, {
            "type": "info_block"
          }
        ]
      }
    ]
  }
{% endschema %}